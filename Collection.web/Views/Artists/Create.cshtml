@model Collection.web.Data.Artist

@{
    ViewData["Title"] = "Create Artist";
}

<h3>Create Artist</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
